<?xml version="1.0"?>
<robot name="wallerson">

  <!-- Link Base -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.75 0.5 0.15"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.15"/>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.75 0.5 0.15"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.15"/>
    </collision>
    <inertial>
      <mass value="10"/>
      <origin xyz="0 0 0.15" rpy="0 0 0"/>
      <inertia ixx="0.5" ixy="0" ixz="0" iyy="0.5" iyz="0" izz="0.5"/>
    </inertial>
  </link>

  <!-- Gazebo properties for base_link -->
  <gazebo reference="base_link">
    <pose>0 0 0.2 0 0 0</pose>
    <mu1>1.0</mu1>
    <mu2>1.0</mu2>
    <kp>10000000.0</kp>
    <kd>10.0</kd>
  </gazebo>

  <!-- Sensor Mount Link -->
  <link name="sensor_mount">
    <visual>
      <geometry>
        <box size="0.75 0.2 0.03"/>
      </geometry>
      <origin xyz="0 0 0.01" rpy="0 0 0"/>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0 0 0"/>
      </geometry>
      <origin xyz="0 0 0.01" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <!-- Sensor Mount Joint -->
  <joint name="sensor_mount_joint" type="fixed">
    <parent link="base_link"/>
    <child link="sensor_mount"/>
    <origin xyz="0 0 0.23" rpy="0 0 0"/>
  </joint>

  <!-- Front Ultrasonic Sensor Link -->
  <link name="front_ultrasonic_link">
    <visual>
      <geometry>
        <cylinder radius="0.02" length="0.03"/>
      </geometry>
      <origin xyz="0 0 0.01" rpy="0 0 0"/>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.02" length="0.03"/>
      </geometry>
      <origin xyz="0 0 0.01" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.01"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>
  <joint name="front_ultrasonic_joint" type="fixed">
    <parent link="sensor_mount"/>
    <child link="front_ultrasonic_link"/>
    <origin xyz="0.35 0 0.03" rpy="0 0 0"/>
  </joint>
  <gazebo reference="front_ultrasonic_link">
    <sensor name="front_ultrasonic" type="ray">
      <pose>0 0 0 0 0 0</pose>
      <visualize>true</visualize>
      <update_rate>10</update_rate>
      <always_on>true</always_on>
      <ray>
        <scan>
          <horizontal>
            <samples>5</samples>
            <resolution>1</resolution>
            <min_angle>-0.5</min_angle>
            <max_angle>0.5</max_angle>
          </horizontal>
          <vertical>
            <samples>3</samples>
            <resolution>1</resolution>
            <min_angle>-0.3</min_angle>
            <max_angle>0.3</max_angle>
          </vertical>
        </scan>
        <range>
          <min>0.02</min>
          <max>0.85</max>
          <resolution>0.01</resolution>
        </range>
      </ray>
      <plugin name="front_ultrasonic_plugin" filename="libgazebo_ros_ray_sensor.so">
        <topicName>/front_ultrasonic_plugin/out</topicName>
        <frameName>front_ultrasonic_link</frameName>
        <radiation>ultrasound</radiation>
        <fov>1.0</fov>
        <alwaysOn>true</alwaysOn>
      </plugin>
    </sensor>
  </gazebo>

  <!-- Rear Ultrasonic Sensor Link -->
  <link name="rear_ultrasonic_link">
    <visual>
      <geometry>
        <cylinder radius="0.02" length="0.03"/>
      </geometry>
      <origin xyz="0 0 0.01" rpy="0 0 0"/>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.02" length="0.03"/>
      </geometry>
      <origin xyz="0 0 0.01" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.01"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>
  <joint name="rear_ultrasonic_joint" type="fixed">
    <parent link="sensor_mount"/>
    <child link="rear_ultrasonic_link"/>
    <origin xyz="-0.35 0 0.03" rpy="0 0 3.14159"/>
  </joint>
  <gazebo reference="rear_ultrasonic_link">
    <sensor name="rear_ultrasonic" type="ray">
      <pose>0 0 0 0 0 0</pose>
      <visualize>true</visualize>
      <update_rate>10</update_rate>
      <always_on>true</always_on>
      <ray>
        <scan>
          <horizontal>
            <samples>5</samples>
            <resolution>1</resolution>
            <min_angle>-0.5</min_angle>
            <max_angle>0.5</max_angle>
          </horizontal>
          <vertical>
            <samples>3</samples>
            <resolution>1</resolution>
            <min_angle>-0.3</min_angle>
            <max_angle>0.3</max_angle>
          </vertical>
        </scan>
        <range>
          <min>0.02</min>
          <max>0.85</max>
          <resolution>0.01</resolution>
        </range>
      </ray>
      <plugin name="rear_ultrasonic_plugin" filename="libgazebo_ros_ray_sensor.so">
        <topicName>/rear_ultrasonic_plugin/out</topicName>
        <frameName>rear_ultrasonic_link</frameName>
        <radiation>ultrasound</radiation>
        <fov>1.0</fov>
        <alwaysOn>true</alwaysOn>
      </plugin>
    </sensor>
  </gazebo>
  
  <!-- Webcam Link -->
  <link name="webcam_link">
    <visual>
      <geometry>
        <box size="0.05 0.03 0.02"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.05 0.03 0.02"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.01"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>

  <!-- Webcam Joint -->
  <joint name="webcam_joint" type="fixed">
    <parent link="sensor_mount"/>
    <child link="webcam_link"/>
    <origin xyz="0.05 0 0.035" rpy="0 0 0"/>
  </joint>

  <!-- Joint Left Wheel -->
  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="-0.13 0.25 0.05" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Joint Right Wheel -->
  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="-0.13 -0.25 0.05" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Left Wheel -->
  <link name="left_wheel">
    <visual>
      <geometry>
        <cylinder length="0.05" radius="0.1"/>
      </geometry>
      <origin rpy="1.5708 0 0" xyz="0 0 0"/>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.05" radius="0.1"/>
      </geometry>
      <origin rpy="1.5708 0 0" xyz="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.002708" ixy="0" ixz="0" iyy="0.005" iyz="0" izz="0.002708"/>
    </inertial>
  </link>

  <!-- Right Wheel -->
  <link name="right_wheel">
    <visual>
      <geometry>
        <cylinder length="0.05" radius="0.1"/>
      </geometry>
      <origin rpy="1.5708 0 0" xyz="0 0 0"/>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.05" radius="0.1"/>
      </geometry>
      <origin rpy="1.5708 0 0" xyz="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.002708" ixy="0" ixz="0" iyy="0.005" iyz="0" izz="0.002708"/>
    </inertial>
  </link>

  <!-- Gazebo properties for wheels -->
  <gazebo reference="left_wheel">
    <mu1>1.5</mu1>
    <mu2>1.5</mu2>
    <kp>10000000.0</kp>
    <kd>10.0</kd>
  </gazebo>
  <gazebo reference="right_wheel">
    <mu1>1.5</mu1>
    <mu2>1.5</mu2>
    <kp>10000000.0</kp>
    <kd>10.0</kd>
  </gazebo>

  <!-- Joint Roda Boba (Caster) -->
  <joint name="caster_joint" type="continuous">
    <parent link="base_link"/>
    <child link="caster_wheel"/>
    <origin xyz="0.25 0 0.03" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <!-- Roda Boba (Caster Wheel) -->
  <link name="caster_wheel">
    <visual>
      <geometry>
        <sphere radius="0.08"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.08"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.05"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>

  <gazebo reference="caster_wheel">
    <mu1>0.5</mu1>
    <mu2>0.5</mu2>
    <kp>10000000.0</kp>
    <kd>10.0</kd>
  </gazebo>

  <!-- Gazebo Differential Drive Plugin -->
  <gazebo>
    <plugin name="differential_drive_controller" filename="libgazebo_ros_diff_drive.so">
      <ros>
        <namespace>/</namespace>
      </ros>
      <left_joint>left_wheel_joint</left_joint>
      <right_joint>right_wheel_joint</right_joint>
      <wheel_separation>0.6</wheel_separation>
      <wheel_diameter>0.2</wheel_diameter>
      <publish_odom>true</publish_odom>
      <publish_odom_tf>true</publish_odom_tf>
      <odom_frame>odom</odom_frame>
      <robot_base_frame>base_link</robot_base_frame>
      <max_wheel_torque>10.0</max_wheel_torque>
      <max_wheel_acceleration>5.0</max_wheel_acceleration>
    </plugin>
  </gazebo>

  <!-- TransmissÃµes -->
  <transmission name="left_wheel_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="left_wheel_joint">
      <hardwareInterface>hardware_interface/JointCommandInterface</hardwareInterface>
    </joint>
    <actuator name="left_wheel_motor">
      <hardwareInterface>hardware_interface/JointCommandInterface</hardwareInterface>
    </actuator>
  </transmission>

  <transmission name="right_wheel_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="right_wheel_joint">
      <hardwareInterface>hardware_interface/JointCommandInterface</hardwareInterface>
    </joint>
    <actuator name="right_wheel_motor">
      <hardwareInterface>hardware_interface/JointCommandInterface</hardwareInterface>
    </actuator>
  </transmission>

  <!-- ROS2 Control -->
  <ros2_control name="WallersonControl" type="system">
    <hardware>
      <plugin>gazebo_ros2_control/GazeboSystem</plugin>
    </hardware>
    <joint name="left_wheel_joint">
      <command_interface name="velocity"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    <joint name="right_wheel_joint">
      <command_interface name="velocity"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
  </ros2_control>

</robot>
